rules_version = '2';
service cloud.firestore {
  function access(database, module, operation) {
    return request.auth.token.role in get(/databases/$(database)/documents/modules/$(module)).data.authorization[operation]
  }

  match /databases/{database}/documents {

    match /categories/{category=**} {
      allow read: if true;
      allow write: if access(database, 'home', 'write') || resource.id == request.auth.uid
    }

    match /home/{home=**} {
      allow read: if true;
      allow write: if access(database, 'home', 'write') || resource.id == request.auth.uid
    }

    match /users/{user=**} {
      allow read, write: if access(database, 'users', 'read') || resource.id == request.auth.uid;
    }

    match /modules/{module=**} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.token.role == 'admin';
    }

    match /{module}/{document=**} {
      allow read: if access(database, module, 'read');
      allow write: if access(database, module, 'write');
    }
  }
}
